@inject NavigationManager navigationManager

<MudDialog>
    <DialogContent>
        <MudStack Spacing="1" AlignItems="AlignItems.Center">
            @if (Icon == "success")
            {
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Large" />
            }
            else if (Icon == "error")
            {
                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" Size="Size.Large" />
            }
            else if (Icon == "info")
            {
                <MudIcon Icon="@Icons.Material.Rounded.Info" Color="Color.Primary" Size="Size.Large" />
            }

            <MudText Typo="Typo.h6">@Message</MudText>

            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CloseDialog">
                OK
            </MudButton>
        </MudStack>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public string? Message { get; set; }


    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    void CloseDialog() => MudDialog!.Close(DialogResult.Ok(true));
}

