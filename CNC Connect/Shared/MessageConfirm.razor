<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5" Class="mt-5" Color="Color.Error" Align="Align.Center">
           ¿Esta seguro de que desea mandar este mensaje?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mt-3">@Mensaje</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit" Class="px-10">Confirmar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }
    [Parameter] public string? Mensaje { get; set; }

    private void Submit() => MudDialog.Close();
}
